{
   "compilerOptions": {
     "module": "commonjs",
     "strict": true,
     "baseUrl": "./",
     "outDir": "./dist",
     "removeComments": true,
     "experimentalDecorators": true,
     "downlevelIteration": true,
     "target": "es6",
     "emitDecoratorMetadata": true,
     "moduleResolution": "node",
     "importHelpers": true,
     "types": [
       "node"
     ],
     "typeRoots": [
       "node_modules/@types"
     ]
   },
   "include": [
     "./src/**/*.ts"
   ],
   "exclude": [
     "./src/public/"
   ]
 }